{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "publish":{
      "dependsOn": ["build", "^publish"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["build"],
      "env": ["ORAMA_SECURE_PROXY_API_KEY_TEST"]
    },
    "biome:check": {
      "dependsOn": ["^biome:check"]
    }
  }
}
